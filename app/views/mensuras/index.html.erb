<fieldset class="ui-widget ui-widget-content ui-corner-all" >
<legend class="ui-widget ui-widget-header ui-corner-all">Mensuras</legend>
<p id="notice"><%= notice %></p>

<table class="listado" id="form-horizontal" >
  <thead>
    <tr class="ui-widget-header listadoTitulo">
      <th>Mensura N°</th>
      <th>Letra</th>
      <th>Expte N°</th>
      <th>Iniciador</th>
      <th>Objeto</th>
      <th>Localidad</th>
      <th>Jurisdiccion</th>
      <th>Rectificacion</th>
      <th>Prop./Poseedor</th>
      <th>Fecha Operaciones</th>
      <th>Visador</th>
      <th>Fecha Registracion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mensuras.each do |mensura| %>
      <tr class="<%= cycle('par','impar') %>">
        <td><%= mensura.mensura_nro %></td>
        <td><%= mensura.mensura_letra %></td>
        <td><%= mensura.expediente.try(:nro_expediente) %></td>
        <td><%= mensura.iniciador.try(:razon_social) %></td>
        <td><%= mensura.objetos_mensura.try(:descripcion) %></td>
        <td><%= mensura.localidad.try(:descripcion) %></td>
        <td><%= mensura.jurisdiccion.descripcion %></td>
        <td><%= mensura.try(:rectificacion_id) %></td>
        <td><%= mensura.propietario %></td>
        <td><%= mensura.fecha_operaciones %></td>
        <td><%= mensura.visador.try(:apellido) %></td>
        <td><%= mensura.fecha_registracion %></td>
        <td><%= link_to 'Show', mensura %></td>
        <td><%= link_to 'Edit', edit_mensura_path(mensura) %></td>
        <td><%= link_to 'Destroy', mensura, method: :delete, data: { confirm: 'Seguro que desea eliminar la Mensura?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Mensura', new_mensura_path, class: "submit ui-button ui-widget ui-state-default ui-corner-all" %>
</fieldset>